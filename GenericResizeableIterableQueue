
package tda;


import java.util.Collection;
import java.util.Iterator;
import java.util.Queue;

/**
 *
 * @author barsa
 */
public class GenericResizingIterableQueue extends GenericResizingIterableArrayList<Object> { // LIFO 8k
    
    
    public void QueueTest(){
        Queue<String> cola = new Queue<String>() {
            
            
            @Override
            public int size() {
                return contador;
            }

            @Override
            public boolean isEmpty() {
                return contador == 0;
            }

            @Override
            public boolean contains(Object o) {
                return indiceDe(o) != -1;
            }

            @Override
            public Iterator<String> iterator() {
                throw new UnsupportedOperationException("Desconocido.");
            }

            @Override
            public Object[] toArray() {
                throw new UnsupportedOperationException("Desconocido.");
            }

            @Override
            public <T> T[] toArray(T[] a) {
                throw new UnsupportedOperationException("Desconocido.");
            }

            @Override
            public boolean remove(Object o) {
                int indice = indiceDe(o);//Buscar el nombre si esta
                if (indice != -1) {//Si lo encontro
                        aLaIzquierda(indice);
                    //Afecta cantidad de elemento
                        a[-- contador] = null;
                    if(contador > 0 && contador == a.length/4)
                        resize(a.length/2);
                            //Dejo nulo en la posición y lo decremento
                        return true;
                    }
                    else return false;
            }

            @Override
            public boolean containsAll(Collection<?> c) {
                throw new UnsupportedOperationException("Desconocido.");
            }

            @Override
            public boolean addAll(Collection<? extends String> c) {
                throw new UnsupportedOperationException("Desconocido.");
            }

            @Override
            public boolean removeAll(Collection<?> c) {
                throw new UnsupportedOperationException("Desconocido.");
            }

            @Override
            public boolean retainAll(Collection<?> c) {
                throw new UnsupportedOperationException("Desconocido.");
            }

            @Override
            public void clear() {
            a = (Object[]) new Object[a.length];
            //Es un arreglo del mismo tamaño pero vacio
            contador = 0;            }
            
            @Override
            public String remove() {
                throw new UnsupportedOperationException("Desconocido.");
            }

            @Override
            public String poll() {
                throw new UnsupportedOperationException("Desconocido.");
            }

            @Override
            public String element() {
                throw new UnsupportedOperationException("Desconocido.");
            }

            @Override
            public String peek() {
                throw new UnsupportedOperationException("Desconocido.");
            }

            @Override
            public boolean add(String e) {
            if(estaLlena())
            resize(2*a.length);
            a[contador++] = e;
            return true;
            }

            @Override
            public boolean offer(String e) {
                throw new UnsupportedOperationException("Desconocido"); 
            }
        };
        
        for(String x : cola){
            System.out.println(x);
        }
        
        
                
                
               
    
    
    
    }
    
    
    
}
